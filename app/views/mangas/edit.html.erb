<h1 id="edit" class="text-uppercase font-weight-bold text-center">Edit your manga</h1>

<% if @manga.errors.any? %>
    <% @manga.errors.full_messages.each do |msg| %>
        <li style="color:red">
            <%= msg %>
        </li>
    <% end %>
<% end %>

<table id="index_table" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Mangaka</th>
            <th scope="col">Collected</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>  
      <%= form_with(model: @manga, data: { turbo: false }, local: true) do |f| %>
              <tr>
                  <td><%= f.text_field :title, class: "form-control" %></td>
                  <td><%= f.text_area :mangaka, class: "form-control" %></td>
                  <td><%= f.text_area :collected, class: "form-control" %></td>
                  <td><%= f.text_area :status, class: "form-control" %></td>
                  <td><%= f.submit class: "btn btn-primary"%></td>
              <tr>
      <% end %>      
    </tbody>
</table>
  
    